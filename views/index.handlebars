<div class="container">
    <div class="header">
	<h1>Burgers!</h1>
	<img src="../assets/img/burger-time.gif" id="burgerPic" alt="burgerPic">
    </div>

    <div class="eatBurger">
	<h2>Eat your burger!</h2>
	<ul>
	    {{#each burgers}}
	    {{#unless this.devoured}}
	    <li>
		{{this.burger_name}}
		
		<form action="/{{this.id}}?_method=PUT" method="POST">
		    <input type="hidden" name="devoured" value="false">
		    <button type="submit">Devour It!</button>
		</form>
		
	    </li>
	    {{/unless}}
	    {{/each}}
	</ul>
    </div>

    <div class="ateBurger">
	<h2>You already ate it!</h2>
	<ul>
	    {{#each burgers}}
	    {{#if this.devoured}}
	    <li>
		{{this.burger_name}}
		
		<form action="/{{this.id}}?_method=PUT" method="POST">
		    <input type="hidden" name="devoured" value="true">
		</form>
		
	    </li>
	    {{/if}}
	    {{/each}}
	</ul>
    </div>

    <div class="order">
	<h2>Order a Burger</h2>
	<form class="create-update-form" action="/" method="POST">
	    
	    <div class="form-group">
		<label for="ca">Burger Name:</label>
		<input type="text" id="burg" name="burger">
	    </div>
	    
	    <button type="submit">Add Burger</button>
	</form>
    </div>
</div>
